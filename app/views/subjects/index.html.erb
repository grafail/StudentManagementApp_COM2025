<hr style="clear:both;visibility:hidden;">
<h1 style="text-align: center;">Manage subjects</h1>
<div id="table"></div>

<% content_for :modal do %>
  <% render 'form', subject:Subject.new %>
<% end %>

<script>

    //Build Tabulator
    var table = new Tabulator("#table", {
        maxHeight: "85%",
        layout: "fitColumns",
        ajaxResponse:function(url, params, response){
            //url - the URL of the request
            //params - the parameters passed with the request
            //response - the JSON object returned in the body of the response.
            console.log(response);
            return response; //return the tableData property of a response json object
        },
        placeholder: "No Data Set",
        columns: [
            {title: "Subject ID", field: "id", sorter: "string", width: 200, editor: true},
            {title: "Course ID", field: "course_id", sorter: "string", width: 200, editor: true},
            {title: "Course Name", field: "course_id", formatter: courseFormatter, sorter: "string", width: 200, editor: false},
            {title: "Lecturer ID", field: "user_id", sorter: "string", width: 200, editor: true},
            {title: "Lecturer Name", field: "user_id", formatter: userFormatter, sorter: "string", width: 200, editor: false},
            {title: "Title", field: "title", sorter: "string", editor: true},
            {title: "Description", field: "description", sorter: "string", editor: false},
            {formatter:"buttonCross", width:40, align:"center", cellClick:deleteItem}
        ],
        cellEdited: function (cell) {
            // This callback is called any time a cell is edited.
            console.log(cell.getRow().getData())
            $.ajax({

                url: '/subjects/' + cell.getRow().getData().id,
                method: 'PATCH',
                dataType: 'json',
                data: {enrollment: cell.getRow().getData()},
                success: function () {
                    toastr.info('Edit was successful!')
                    alert('Edit was successful!')
                    table.replaceData()
                },
                error: function () {
                    alert('Edit was not successful!')
                }

            })
        },
    });

    $(document).ready(function () {
        table.setData("/subjects");
    });

</script>
<button class="btn btn-primary" type="submit" onclick="MicroModal.show('modal-1')">New Subject</button>
<button class="btn btn-primary" onclick="table.replaceData()">Refresh Data</button>