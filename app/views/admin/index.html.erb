<hr style="clear:both;visibility:hidden;">
<h1 style="text-align: center;">Manage users</h1>
<div id="table"></div>

<% content_for :modal do %>
  <% render 'form', resource:User.new %>
<% end %>

<script>
    var table = new Tabulator("#table", {
        maxHeight: "85%",
        layout: "fitColumns",
        placeholder: "No Data Set",
        columns: [
            {title: "User ID", field: "id", sorter: "number",  editor: false},
            {title: "First Name", field: "firstname", sorter: "string",  editor: <%= @editStatus %>},
            {title: "Last Name", field: "lastname", sorter: "string",  editor: <%= @editStatus %>},
            {title: "Email Address", field: "email", sorter: "string", validator:"regex:[A-Z0-9a-z._%+-]+@[A-Za-z0-9.-]+\\.[A-Za-z]{2,4}", editor: <%= @editStatus %>},
            {formatter:"buttonCross", width:40, align:"center", cellClick:deleteUser, cssClass: "DELETE_BUTTON_CLASS"}
        ],
        cellEdited: function (cell) {
            // This callback is called any time a cell is edited.
            $.ajax({

                url: '/users/'+cell.getRow().getData().id,
                method: 'PATCH',
                dataType: 'json',
                data: {user: cell.getRow().getData()},
                success: function () {
                    toastr.success('Edit was successful!')
                    table.replaceData()
                },
                error: function () {
                    toastr.error('Incorrect input or insufficient access!')
                    table.replaceData()
                }

            })
        },
    });

    $(document).ready(function () {
        table.setData("/admin/index");
    });

</script>
<button class="btn btn-primary" type="submit" onclick="MicroModal.show('modal-1')">New User</button>
<button class="btn btn-primary" onclick="table.replaceData()">Refresh Data</button>