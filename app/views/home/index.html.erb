<div class="sidenav">
  <div class="login-main-text">
    <h2><%= t('home.applicationName') %><br> <%= t('login_page') %></h2>
    <p><%= t('home.loginMessage') %></p>
  </div>
</div>
<div class="main">
  <div class="col-md-6 col-sm-12">
    <div class="login-form">
      <form>
        <div class="form-group">
          <label><%= t('user_name') %></label>
          <input type="text" class="form-control" placeholder="<%= t('user_name') %>">
        </div>
        <div class="form-group">
          <label><%= t('password') %></label>
          <input type="password" class="form-control" placeholder="<%= t('password') %>">
        </div>
        <button type="submit" class="btn btn-black"><%= t('home.login') %></button>
      </form>
    </div>
  </div>
</div>