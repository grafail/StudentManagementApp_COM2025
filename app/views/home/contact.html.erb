<div class="container contact">
  <div class="row">
    <div class="col-md-3">
      <div class="contact-info">
        <i class="fas fa-envelope fa-6x"></i>
        <h2><%= t('home.contact_us') %></h2>
        <h4><%= t('home.get_in_touch') %></h4>
      </div>
    </div>
    <div class="col-md-9">
      <div class="contact-form">
        <%= form_with url: contact_path do |f| %>
          <div class="form-group">
            <label class="control-label col-sm-2" for="fname">First Name:</label>
            <div class="col-sm-10">
              <%= f.text_field :fname, :hint => 'Enter First Name', :class => 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2" for="lname">Last Name:</label>
            <div class="col-sm-10">
              <%= f.text_field :lname, :hint => 'Enter Last Name', :class => 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2" for="email">Email:</label>
            <div class="col-sm-10">
              <%= f.email_field :email, :hint => 'Enter email', :class => 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2" for="message">Comment:</label>
            <div class="col-sm-10">
              <%= f.text_area :message, :hint => 'Enter your message', :class => 'form-control', :rows => '5' %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <%= f.submit 'Send Message', class: 'btn btn-primary' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>